<% provide(:title, "Add Category") %>
<section class="showcase">
  <div class="container-fluid p-0">
    <div class="row no-gutters">
      <div class="col" style="padding: 20px;margin: 20px;">
        <h1 class="main-heading">Add Category for courseApp</h1>
      </div>
    </div>
    <div class="row login-form">
      <div class="col-md-4 offset-md-4">
        <%= form_for(@categories, url: category_path) do |f| %>
          <%= render 'shared/categories_error_messages' %>
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
          </div>
          <div class="form-group">
          <%= f.submit "Add Category", class: "btn btn-light btn-block submit-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>